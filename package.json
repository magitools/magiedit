{
  "type": "module",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@iconify-json/devicon": "^1.2.11",
    "concurrently": "^9.1.2",
    "daisyui": "^4.12.23",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-go-template": "^0.0.15",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7",
    "vitepress": "^1.5.0"
  },
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "vite:dev": "vite build --watch",
    "vite:build": "vite build",
    "tailwind:dev": "tailwindcss -i ./src/css/main.css -o ./static/main.css --watch --minify",
    "dev": "concurrently -c yellow,blue,green,cyan --names vite,air,tailwind,templ \"pnpm vite:dev\" \"air\" \"tailwindcss -i ./src/css/main.css -o ./static/main.css --watch\" \" templ generate --watch -v\" ",
    "prepare": "husky"
  },
  "dependencies": {
    "@iconify/tailwind": "^1.2.0",
    "alpinejs": "^3.14.8",
    "htmx.org": "2.0.4"
  }
